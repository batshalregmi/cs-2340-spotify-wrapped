<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/loginbg"
    tools:context=".CoreAppViews.SignUpActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/custom_edittext">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/main_bg2"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/loginText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create New Account"
                android:textAlignment="center"
                android:textColor="@color/yellow"
                android:textSize="36sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/custom_edittext"
                android:paddingStart="18dp"
                android:textColorHint="@color/yellow"
                android:hint="Username"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="@color/white"
                android:textColorHighlight="@color/cardview_dark_background" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                android:paddingStart="18dp"
                android:textColorHint="@color/yellow"
                android:hint="Email"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="@color/white"
                android:textColorHighlight="@color/cardview_dark_background" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                android:paddingStart="18dp"
                android:hint="Full Name"
                android:textColorHint="@color/yellow"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="@color/white"
                android:textColorHighlight="@color/cardview_dark_background" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="15dp"
                android:id="@+id/passwordParent"
                android:layout_width="350dp"
                android:layout_height="wrap_content"

                android:textColor="@color/black"
                app:cursorColor="@color/purple"
                app:hintEnabled="false"
                app:passwordToggleEnabled="true"
                app:hintTextColor="@color/white"
                app:passwordToggleTint="@color/yellow">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:textColorHint="@color/yellow"
                    android:textColor="@color/white"
                    app:hintAnimationEnabled="false"
                    android:background="@drawable/custom_edittext"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:defaultFocusHighlightEnabled="false"
                    android:padding="8dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="15dp"
                android:id="@+id/confirmPasswordParent"
                android:layout_width="350dp"
                android:layout_height="wrap_content"

                android:textColor="@color/black"
                app:cursorColor="@color/purple"
                app:hintEnabled="false"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/yellow">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/confirmPassword"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    app:hintAnimationEnabled="false"
                    android:textColorHint="@color/yellow"
                    android:textColor="@color/white"
                    android:background="@drawable/custom_edittext"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:defaultFocusHighlightEnabled="false"
                    android:padding="8dp" />
            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/createAccount"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/title_featured"
                android:text="Create Account"
                android:textSize="18sp"
                app:cornerRadius="20dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>